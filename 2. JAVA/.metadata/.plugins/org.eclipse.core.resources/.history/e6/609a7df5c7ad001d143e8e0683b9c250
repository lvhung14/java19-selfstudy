package io;

import java.util.Calendar;
import java.util.Random;

public class Ex03 {
	public static void main(String[] args) {
		
		int wkd = Calendar.getInstance().get(Calendar.DAY_OF_WEEK);
		
		String wdkString = null;
		
		switch(wkd) {
		case 1:
			wdkString = "Sunday";
			break;
		case 2:
			wdkString = "Monday";
			break;
		
		default:
			System.out.println("Weekday is not available!");
	}
		System.out.println("wdk: " + wkdString);
	}
}
