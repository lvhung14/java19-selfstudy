package io;

import java.util.Calendar;
import java.util.Random;

public class Ex03 {
	public static void main(String[] args) {
		
		int wkd = Calendar.getInstance().get(Calendar.DAY_OF_WEEK);
		
		String wdkAsString = null;
		
		switch(wkd) {
		case 1:
			wdkAsString = "Sunday";
			break;
		case 2:
			wdkAsString = "Monday";
			break;
		
		default:
			System.out.println("Weekday is not available!");
		}
		System.out.println("wdk: " + wkdAsString);
	}
}
